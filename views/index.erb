<html>
  <head>
    <title>Map Test</title>
    <link rel="stylesheet" type="text/css" href="main.css"/>
    <% map_api_key = ENV['GOOGLE_MAPS_API_KEY'] %>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= map_api_key %>" type="text/javascript"></script>
    <script src="arcgislink.js"></script>
  </head>

  <body onload="init()">
    <div id="map"></div>
    <script>
        function init() {
            var center = {lat: 37.8320793, lng: -86.6372395}
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 16,
                center: center
            });
            var marker = new google.maps.Marker({
                position: center,
                map: map
            });
            var url = '<%= ENV['ARCGIS_SERVICE_URL'] %>';
            var dynamap = new gmaps.ags.MapOverlay(url);
            dynamap.setMap(map);
        }
    </script>
  </body>
</html>
